# Configurações de Produção - Tem Aki no Bairro Backend
NODE_ENV=production
PORT=3000

# Configurações de Segurança - ALTERAR EM PRODUÇÃO
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_SUPER_SECRET_KEY_2024
JWT_EXPIRES_IN=24h
CORS_ORIGIN=https://temakinobairro.com.br,https://admin.temakinobairro.com.br

# Configurações de Rate Limiting (mais restritivo em produção)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Configurações de Upload
MAX_FILE_SIZE=5mb
UPLOAD_PATH=./uploads

# Configurações de Log
LOG_LEVEL=warn
LOG_FILE=./logs/production.log

# Configurações de Database
DATABASE_URL=postgresql://user:password@localhost:5432/temakinobairro
DATABASE_TYPE=postgresql

# Configurações de Cache
CACHE_TTL=600000
CACHE_MAX_SIZE=2000

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@temakinobairro.com.br
SMTP_PASS=your_email_password

# Configurações de Monitoramento
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000