# Configurações do Aplicativo Móvel - Produção
# Ambiente
NODE_ENV=production
EXPO_PUBLIC_ENV=production

# API Configuration - URLs locais para teste de produção
EXPO_PUBLIC_API_BASE_URL=http://192.168.3.195:3000/api
EXPO_PUBLIC_WEB_ADMIN_URL=http://192.168.3.195:3001

# Cache Configuration
EXPO_PUBLIC_CACHE_DURATION=600000
EXPO_PUBLIC_MAX_CACHE_SIZE=100

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=60000
EXPO_PUBLIC_OFFLINE_RETRY_ATTEMPTS=5
EXPO_PUBLIC_OFFLINE_RETRY_DELAY=10000

# Upload Configuration
EXPO_PUBLIC_MAX_FILE_SIZE=5242880
EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# App Configuration
EXPO_PUBLIC_APP_NAME=Negócios do Bairro
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_SUPPORT_EMAIL=suporte@negociosdobairro.com

# Debug (desabilitado em produção)
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=error

# Analytics e Monitoramento
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=true

# Performance
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_BUNDLE_OPTIMIZATION=true