# Configurações do Aplicativo Móvel - Negócios do Bairro
# Ambiente
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api
EXPO_PUBLIC_WEB_ADMIN_URL=http://localhost:3001

# Cache Configuration
EXPO_PUBLIC_CACHE_DURATION=300000
EXPO_PUBLIC_MAX_CACHE_SIZE=50

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=30000
EXPO_PUBLIC_OFFLINE_RETRY_ATTEMPTS=3
EXPO_PUBLIC_OFFLINE_RETRY_DELAY=5000

# Upload Configuration
EXPO_PUBLIC_MAX_FILE_SIZE=10485760
EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# App Configuration
EXPO_PUBLIC_APP_NAME=Negócios do Bairro
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_SUPPORT_EMAIL=suporte@negociosdobairro.com

# Debug (apenas desenvolvimento)
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug